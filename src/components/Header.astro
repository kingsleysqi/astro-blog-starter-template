---
import HeaderLink from './HeaderLink.astro';
---

<header>
  <nav>
    <div class="left">
      <h2>
        <a href="/" aria-label="Home">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" width="54" height="54">
            <defs>
              <linearGradient id="k-stem-gloss" x1="0%" y1="0%" x2="0%" y2="100%">
                <stop offset="0%" stop-color="#fff" stop-opacity="0" />
                <stop offset="10%" stop-color="#fff" />
                <stop offset="90%" stop-color="#fff" />
                <stop offset="100%" stop-color="#fff" stop-opacity="0" />
              </linearGradient>

              <linearGradient id="silver-metal" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" stop-color="#FFFFFF" />
                <stop offset="100%" stop-color="#8E8E8E" />
              </linearGradient>
            </defs>

            <g fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path 
                d="M 62 35 A 22 22 0 1 1 55 75" 
                stroke="#BDBDBD" 
                stroke-width="8" 
              />

              <path d="M 32 50 L 60 22" stroke="url(#silver-metal)" stroke-width="12" />
              <path d="M 32 50 L 75 90" stroke="url(#silver-metal)" stroke-width="12" />

              <path 
                d="M 28 12 L 28 88" 
                stroke="url(#k-stem-gloss)" 
                stroke-width="18" 
              />
            </g>
          </svg>
        </a>
      </h2>

      <span class="nav-divider"></span>

      <div class="internal-links">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
      </div>
    </div>
  </nav>
</header>

<style>
  header {
    padding: 0 1.5rem;
    background: #ffffff;
    box-shadow: 0 1px 6px rgba(0,0,0,0.02);
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    height: 64px;
  }

  .left {
    display: flex;
    align-items: center;
    gap: 1.2rem;
  }

  .nav-divider {
    width: 1px;
    height: 20px;
    background: linear-gradient(to bottom, transparent, #e0e0e0, transparent);
  }

  .internal-links {
    display: flex;
    gap: 0.5rem;
  }

  nav a {
    padding: 0.8em 0.8em;
    color: #333;
    font-size: 0.94rem;
    font-weight: 500;
    text-decoration: none;
    border-bottom: 2px solid transparent;
    transition: all 0.2s ease;
  }

  nav a:hover, nav a.active {
    color: #000;
    border-bottom-color: #333;
  }
</style>
