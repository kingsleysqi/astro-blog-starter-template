---
import HeaderLink from './HeaderLink.astro';
---

<header>
  <nav>
    <div class="left">
      <h2>
        <a href="/" aria-label="Home">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" width="54" height="54">
            <defs>
              <linearGradient id="k-stem-grad" x1="0%" y1="0%" x2="0%" y2="100%">
                <stop offset="0%"   stop-color="#888" stop-opacity="0.2" />
                <stop offset="20%"  stop-color="#ccc" />
                <stop offset="50%"  stop-color="#fff" />
                <stop offset="80%"  stop-color="#ccc" />
                <stop offset="100%" stop-color="#888" stop-opacity="0.2" />
              </linearGradient>

              <linearGradient id="kq-part-grad" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%"   stop-color="#fff" />
                <stop offset="100%" stop-color="#999" />
              </linearGradient>
            </defs>

            <g fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path d="M 28 12 L 28 88" stroke="url(#k-stem-grad)" stroke-width="16" />

              <path d="M 28 45 L 56 18" stroke="url(#kq-part-grad)" stroke-width="13" />

              <path d="M 52 38 A 21 21 0 1 1 44 76" stroke="url(#kq-part-grad)" stroke-width="12" />

              <path d="M 36 45 L 82 90" stroke="url(#kq-part-grad)" stroke-width="14" />
            </g>
          </svg>
        </a>
      </h2>

      <span class="nav-divider"></span>

      <div class="internal-links">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
      </div>
    </div>
  </nav>
</header>

<style>
  header {
    padding: 0 1.5rem;
    background: #ffffff;
    box-shadow: 0 1px 8px rgba(0,0,0,0.03);
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    height: 64px;
  }

  .left {
    display: flex;
    align-items: center;
    gap: 1.2rem;
  }

  h2 a { display: block; }

  /* 导航分割线也做了两端渐隐，呼应 Logo 竖杠 */
  .nav-divider {
    width: 1px;
    height: 20px;
    background: linear-gradient(to bottom, transparent, #e5e5e5, transparent);
  }

  .internal-links {
    display: flex;
    gap: 0.4rem;
  }

  nav a {
    padding: 0.8em 0.8em;
    color: #333;
    font-size: 0.94rem;
    font-weight: 500;
    text-decoration: none;
    border-bottom: 2px solid transparent;
    transition: all 0.2s ease;
  }

  nav a:hover, nav a.active {
    color: #000;
    border-bottom-color: #333;
  }
</style>
