---
import HeaderLink from './HeaderLink.astro';
---

<header>
  <nav>
    <div class="left">
      <h2>
        <a href="/" aria-label="Home">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" width="54" height="54">
            <defs>
              <linearGradient id="k-bar-grad" x1="0%" y1="0%" x2="0%" y2="100%">
                <stop offset="0%" stop-color="#fff" stop-opacity="0.1" />
                <stop offset="20%" stop-color="#fff" />
                <stop offset="80%" stop-color="#fff" />
                <stop offset="100%" stop-color="#fff" stop-opacity="0.1" />
              </linearGradient>
            </defs>

            <g fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path 
                d="M 66 38 A 20 20 0 1 1 48 78" 
                stroke="#B0B0B0" 
                stroke-width="10" 
              />

              <path 
                d="M 38 48 L 62 22 M 38 52 L 78 90" 
                stroke="#D0D0D0" 
                stroke-width="13" 
              />

              <path 
                d="M 28 12 L 28 88" 
                stroke="url(#k-bar-grad)" 
                stroke-width="19" 
              />
            </g>
          </svg>
        </a>
      </h2>

      <span class="nav-divider"></span>

      <div class="internal-links">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
      </div>
    </div>
  </nav>
</header>

<style>
  header {
    padding: 0 1.5rem;
    background: #ffffff;
    box-shadow: 0 1px 4px rgba(0,0,0,0.03);
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    height: 64px;
  }

  .left {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .nav-divider {
    width: 1px;
    height: 20px;
    background: #f0f0f0;
  }

  .internal-links {
    display: flex;
    gap: 0.5rem;
  }

  /* 导航链接：找回明显的底部横杠提示 */
  nav a {
    padding: 1.2rem 1rem;
    color: #555;
    font-size: 0.95rem;
    font-weight: 500;
    text-decoration: none;
    position: relative;
    transition: color 0.2s ease;
  }

  nav a:hover {
    color: #000;
  }

  /* 底部横杠动画 */
  nav a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 20%;
    width: 60%;
    height: 3px;
    background: #333;
    border-radius: 2px;
    transform: scaleX(0);
    transition: transform 0.25s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  /* 激活或悬停时显示横杠 */
  nav a:hover::after,
  nav a.active::after {
    transform: scaleX(1);
  }

  nav a.active {
    color: #000;
    font-weight: 600;
  }
</style>
