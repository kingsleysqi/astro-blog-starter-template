---
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<div class="left">
			<h2>
				<a href="/" aria-label="Home">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 100 100"
						width="52"
						height="52"
					>
						<defs>
							<linearGradient id="k-strong" x1="0%" y1="0%" x2="0%" y2="100%">
								<stop offset="0%"   stop-color="#2c2c2c"/>
								<stop offset="100%" stop-color="#0f0f0f"/>
							</linearGradient>

							<linearGradient id="q-soft" x1="0%" y1="0%" x2="100%" y2="100%">
								<stop offset="0%"   stop-color="#aaaaaa"/>
								<stop offset="100%" stop-color="#777777"/>
							</linearGradient>
						</defs>

						<!-- K 主竖杠（核心・不可妥协） -->
						<path
							d="M 22 12 L 22 88"
							stroke="url(#k-strong)"
							stroke-width="24"
							stroke-linecap="butt"
							fill="none"
						/>

						<!-- K 右上斜杠 - 更短、更锐、更日式留白 -->
						<path
							d="M 22 45 L 48 22"
							stroke="url(#q-soft)"
							stroke-width="10"
							stroke-linecap="round"
							fill="none"
						/>

						<!-- K 右下斜杠 - 对称但更克制 -->
						<path
							d="M 22 55 L 48 78"
							stroke="url(#q-soft)"
							stroke-width="10"
							stroke-linecap="round"
							fill="none"
						/>

						<!-- Q - 极简单笔触（几乎只剩暗示） -->
						<path
							d="M 68 30 
							   A 18 18 0 1 1 68 70 
							   M 78 62 L 88 78"
							stroke="url(#q-soft)"
							stroke-width="7"
							stroke-linecap="round"
							fill="none"
							opacity="0.80"
						/>

					</svg>
				</a>
			</h2>

			<span class="nav-divider"></span>

			<div class="internal-links">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/blog">Blog</HeaderLink>
				<HeaderLink href="/about">About</HeaderLink>
			</div>
		</div>
	</nav>
</header>

<style>
	header {
		padding: 0 1.5rem;
		background: #ffffff;
		box-shadow: 0 1px 6px rgba(0,0,0,0.04);
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
	}

	.left {
		display: flex;
		align-items: center;
		gap: 1.1rem;
	}

	h2 {
		margin: 0;
		line-height: 1;
	}

	h2 a {
		display: block;
		text-decoration: none;
	}

	h2 a svg {
		display: block;
		opacity: 0.92;
		transition: opacity 0.12s ease;
	}

	h2 a:hover svg {
		opacity: 1;
	}

	.nav-divider {
		width: 1px;
		height: 24px;
		background: #e0e0e0;
	}

	.internal-links {
		display: flex;
		gap: 0.4rem;
	}

	nav a {
		padding: 0.9em 0.7em;
		color: #222;
		font-size: 0.94rem;
		font-weight: 480;
		letter-spacing: 0.02em;
		text-decoration: none;
		border-bottom: 2px solid transparent;
		transition: border-color 0.15s ease;
	}

	nav a.active,
	nav a:hover {
		border-bottom-color: #666;
	}
</style>