---
import HeaderLink from './HeaderLink.astro';
---

<header>
  <nav>
    <div class="left">
      <h2>
        <a href="/" aria-label="Home">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 100 100"
            width="52"
            height="52"
          >
            <defs>
              <!-- K 竖杠渐变：从很浅开始，往下变深，弱化第一眼冲击 -->
              <linearGradient id="k-gradient" x1="0%" y1="0%" x2="0%" y2="100%">
                <stop offset="0%"   stop-color="#d0d0d0" />
                <stop offset="40%"  stop-color="#a0a0a0" />
                <stop offset="100%" stop-color="#444444" />
              </linearGradient>

              <!-- Q / 斜杠渐变：更柔和、偏冷灰 -->
              <linearGradient id="q-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%"   stop-color="#c0c0c0" />
                <stop offset="100%" stop-color="#888888" />
              </linearGradient>
            </defs>

            <!-- K 主竖杠：渐变 + 稍细 + 上部模糊感 -->
            <path
              d="M 24 8 L 24 92"
              stroke="url(#k-gradient)"
              stroke-width="18"
              stroke-linecap="butt"
              fill="none"
              opacity="0.94"
            />

            <!-- K 右上斜杠：更短、更淡、更模糊 -->
            <path
              d="M 24 46 L 44 26"
              stroke="url(#q-gradient)"
              stroke-width="7"
              stroke-linecap="round"
              fill="none"
              opacity="0.82"
            />

            <!-- K 右下斜杠：对称但同样弱化 -->
            <path
              d="M 24 54 L 44 74"
              stroke="url(#q-gradient)"
              stroke-width="7"
              stroke-linecap="round"
              fill="none"
              opacity="0.82"
            />

            <!-- Q：极简暗示，只剩圆 + 短尾巴 -->
            <path
              d="M 68 34 
                 A 15 15 0 1 1 68 66 
                 M 74 58 L 82 70"
              stroke="url(#q-gradient)"
              stroke-width="5.5"
              stroke-linecap="round"
              fill="none"
              opacity="0.75"
            />
          </svg>
        </a>
      </h2>

      <span class="nav-divider"></span>

      <div class="internal-links">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
      </div>
    </div>
  </nav>
</header>

<style>
  header {
    padding: 0 1.5rem;
    background: #ffffff;
    box-shadow: 0 1px 6px rgba(0,0,0,0.04);
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
  }

  .left {
    display: flex;
    align-items: center;
    gap: 1.1rem;
  }

  h2 {
    margin: 0;
    line-height: 1;
  }

  h2 a {
    display: block;
    text-decoration: none;
  }

  h2 a svg {
    display: block;
    opacity: 0.93;
    transition: opacity 0.14s ease;
  }

  h2 a:hover svg {
    opacity: 1;
  }

  .nav-divider {
    width: 1px;
    height: 24px;
    background: #e0e0e0;
  }

  .internal-links {
    display: flex;
    gap: 0.4rem;
  }

  nav a {
    padding: 0.9em 0.7em;
    color: #222;
    font-size: 0.94rem;
    font-weight: 480;
    letter-spacing: 0.02em;
    text-decoration: none;
    border-bottom: 2px solid transparent;
    transition: border-color 0.15s ease;
  }

  nav a.active,
  nav a:hover {
    border-bottom-color: #666;
  }
</style>