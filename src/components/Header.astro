---
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<div class="left">
			<h2>
				<a href="/" aria-label="Home">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 120 100"
						width="54"
						height="54"
					>
						<defs>
							<!-- 统一日式哑光灰 -->
							<linearGradient id="k_main" x1="0%" y1="0%" x2="100%" y2="100%">
								<stop offset="0%" stop-color="#eeeeee"/>
								<stop offset="100%" stop-color="#9a9a9a"/>
							</linearGradient>
						</defs>

						<!-- K：竖主干（第一视觉锚点） -->
						<path
							d="M 24 10 L 24 90"
							fill="none"
							stroke="url(#k_main)"
							stroke-width="16"
							stroke-linecap="butt"
						/>

						<!-- K：上臂 -->
						<path
							d="M 24 50 L 56 24"
							fill="none"
							stroke="url(#k_main)"
							stroke-width="13"
							stroke-linecap="butt"
						/>

						<!-- K：下臂 -->
						<path
							d="M 24 50 L 56 78"
							fill="none"
							stroke="url(#k_main)"
							stroke-width="13"
							stroke-linecap="butt"
						/>

						<!-- Q：弱化为“结构圆”（彩蛋级） -->
						<path
							d="M 78 32
							   A 20 20 0 1 1 78 68
							   A 20 20 0 1 1 78 32"
							fill="none"
							stroke="url(#k_main)"
							stroke-width="9"
							stroke-linecap="butt"
							opacity="0.55"
						/>

						<!-- Q：极克制尾巴 -->
						<path
							d="M 86 66 L 98 82"
							fill="none"
							stroke="url(#k_main)"
							stroke-width="8"
							stroke-linecap="butt"
							opacity="0.55"
						/>
					</svg>
				</a>
			</h2>

			<span class="nav-divider"></span>

			<div class="internal-links">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/blog">Blog</HeaderLink>
				<HeaderLink href="/about">About</HeaderLink>
			</div>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 0 1.2em;
		background: #fff;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.left {
		display: flex;
		align-items: center;
	}

	h2 a {
		display: flex;
		align-items: center;
		text-decoration: none;
	}

	h2 a svg {
		display: block;
		opacity: 0.95;
	}

	h2 a:hover svg {
		opacity: 1;
	}

	.nav-divider {
		width: 1px;
		height: 28px;
		margin: 0 1.2em;
		background: linear-gradient(
			to bottom,
			transparent,
			#aaa,
			#666,
			transparent
		);
	}

	.internal-links {
		display: flex;
	}

	nav a {
		padding: 1em 0.6em;
		color: #111;
		text-decoration: none;
		border-bottom: 2px solid transparent;
		font-size: 0.95rem;
		letter-spacing: 0.02em;
	}

	nav a.active {
		border-bottom-color: var(--accent);
	}
</style>