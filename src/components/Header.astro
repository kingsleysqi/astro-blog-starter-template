---
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<div class="left">
			<h2>
				<a href="/" aria-label="Home">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 120 100"
						width="56"
						height="56"
					>
						<defs>
							<!-- 主结构统一：日式哑光灰 -->
							<linearGradient id="kq_main" x1="0%" y1="0%" x2="100%" y2="100%">
								<stop offset="0%" stop-color="#eeeeee"/>
								<stop offset="100%" stop-color="#9a9a9a"/>
							</linearGradient>
						</defs>

						<!-- K：竖主干 -->
						<path
							d="M 22 10 L 22 90"
							fill="none"
							stroke="url(#kq_main)"
							stroke-width="14"
							stroke-linecap="butt"
						/>

						<!-- K：上臂 -->
						<path
							d="M 22 50 L 52 22"
							fill="none"
							stroke="url(#kq_main)"
							stroke-width="12"
							stroke-linecap="butt"
						/>

						<!-- K：下臂 -->
						<path
							d="M 22 50 L 52 78"
							fill="none"
							stroke="url(#kq_main)"
							stroke-width="12"
							stroke-linecap="butt"
						/>

						<!-- Q：主体圆 -->
						<path
							d="M 78 28
							   A 22 22 0 1 1 78 72
							   A 22 22 0 1 1 78 28"
							fill="none"
							stroke="url(#kq_main)"
							stroke-width="12"
							stroke-linecap="butt"
						/>

						<!-- Q：尾巴（克制，不抢戏） -->
						<path
							d="M 90 68 L 104 86"
							fill="none"
							stroke="url(#kq_main)"
							stroke-width="10"
							stroke-linecap="butt"
						/>
					</svg>
				</a>
			</h2>

			<span class="nav-divider"></span>

			<div class="internal-links">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/blog">Blog</HeaderLink>
				<HeaderLink href="/about">About</HeaderLink>
			</div>
		</div>

		<div class="social-links">
			<a href="https://github.com/KingsleyQi" target="_blank" aria-label="GitHub">
				<svg viewBox="0 0 16 16" width="28" height="28">
					<path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					/>
				</svg>
			</a>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 0 1.2em;
		background: #fff;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.left {
		display: flex;
		align-items: center;
	}

	h2 a {
		display: flex;
		align-items: center;
		text-decoration: none;
	}

	h2 a svg {
		display: block;
		opacity: 0.95;
	}

	.nav-divider {
		width: 1px;
		height: 28px;
		margin: 0 1.2em;
		background: linear-gradient(
			to bottom,
			transparent,
			#aaa,
			#666,
			transparent
		);
	}

	.internal-links {
		display: flex;
	}

	nav a {
		padding: 1em 0.6em;
		color: #111;
		text-decoration: none;
		border-bottom: 2px solid transparent;
		font-size: 0.95rem;
		letter-spacing: 0.02em;
	}

	nav a.active {
		border-bottom-color: var(--accent);
	}

	.social-links {
		display: flex;
		align-items: center;
	}

	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>