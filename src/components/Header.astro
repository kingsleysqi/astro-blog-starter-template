---
import HeaderLink from './HeaderLink.astro';
---

<header>
  <nav>
    <div class="left">
      <h2>
        <a href="/" aria-label="Home">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" width="56" height="56">
            <defs>
              <linearGradient id="k-stem-refine" x1="0%" y1="0%" x2="0%" y2="100%">
                <stop offset="0%" stop-color="#fff" stop-opacity="0" />
                <stop offset="15%" stop-color="#fff" stop-opacity="0.8" />
                <stop offset="50%" stop-color="#fff" stop-opacity="1" />
                <stop offset="85%" stop-color="#fff" stop-opacity="0.8" />
                <stop offset="100%" stop-color="#fff" stop-opacity="0" />
              </linearGradient>

              <linearGradient id="silver-volume" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" stop-color="#FFFFFF" />
                <stop offset="100%" stop-color="#A0A0A0" />
              </linearGradient>
            </defs>

            <g fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path 
                d="M 68 35 A 22 22 0 1 1 50 78" 
                stroke="#C5C5C5" 
                stroke-width="9" 
              />

              <path d="M 36 48 L 62 20" stroke="url(#silver-volume)" stroke-width="12" />

              <path d="M 40 48 L 85 92" stroke="url(#silver-volume)" stroke-width="14" />

              <path 
                d="M 28 12 L 28 88" 
                stroke="url(#k-stem-refine)" 
                stroke-width="17" 
              />
            </g>
          </svg>
        </a>
      </h2>

      <span class="nav-divider"></span>

      <div class="internal-links">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
      </div>
    </div>
  </nav>
</header>

<style>
  header {
    padding: 0 1.5rem;
    background: #ffffff;
    box-shadow: 0 1px 6px rgba(0,0,0,0.02);
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    height: 64px;
  }

  .left {
    display: flex;
    align-items: center;
    gap: 1.2rem;
  }

  .nav-divider {
    width: 1px;
    height: 22px;
    background: linear-gradient(to bottom, transparent, #e5e5e5, transparent);
  }

  .internal-links {
    display: flex;
    gap: 0.5rem;
  }

  nav a {
    padding: 0.8em 0.8em;
    color: #444;
    font-size: 0.94rem;
    font-weight: 500;
    text-decoration: none;
    border-bottom: 2px solid transparent;
    transition: all 0.2s ease;
  }

  nav a:hover, nav a.active {
    color: #000;
    border-bottom-color: #333;
  }
</style>
