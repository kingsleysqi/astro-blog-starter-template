---
import HeaderLink from './HeaderLink.astro';
---

<header>
  <nav>
    <div class="left">
      <h2>
        <a href="/" aria-label="Home">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" width="54" height="54">
            <defs>
              <linearGradient id="jp-ink-gradient" x1="0%" y1="0%" x2="0%" y2="100%">
                <stop offset="0%"   stop-color="#333" stop-opacity="0" />
                <stop offset="20%"  stop-color="#444" stop-opacity="0.8" />
                <stop offset="50%"  stop-color="#000" stop-opacity="1" />
                <stop offset="85%"  stop-color="#666" stop-opacity="0.6" />
                <stop offset="100%" stop-color="#999" stop-opacity="0" />
              </linearGradient>

              <linearGradient id="fine-wire" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%"   stop-color="#000" />
                <stop offset="100%" stop-color="#888" />
              </linearGradient>
            </defs>

            <path
              d="M 28 10 L 28 90"
              stroke="url(#jp-ink-gradient)"
              stroke-width="3" 
              fill="none"
            />
            <path
              d="M 31 25 L 31 75"
              stroke="#e0e0e0"
              stroke-width="0.5"
              fill="none"
            />

            <path
              d="M 28 45 L 60 15"
              stroke="url(#fine-wire)"
              stroke-width="1.5"
              stroke-linecap="square"
            />

            <path
              d="M 65 40 A 22 22 0 1 1 45 82"
              stroke="#222"
              stroke-width="2.5"
              stroke-linecap="round"
              fill="none"
            />

            <path
              d="M 35 45 L 85 95"
              stroke="#000"
              stroke-width="4"
              stroke-linecap="butt"
            />
          </g>
          </svg>
        </a>
      </h2>

      <span class="nav-divider"></span>

      <div class="internal-links">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
      </div>
    </div>
  </nav>
</header>

<style>
  header {
    padding: 0 1.5rem;
    background: #fafafa; /* 稍微偏一点和纸的米白色 */
    box-shadow: 0 1px 2px rgba(0,0,0,0.02);
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    height: 70px;
  }

  .left {
    display: flex;
    align-items: center;
    gap: 2rem; /* 增加留白 */
  }

  h2 a svg {
    display: block;
    transition: transform 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  h2 a:hover svg {
    transform: scale(1.05);
  }

  .nav-divider {
    width: 1px;
    height: 30px;
    background: linear-gradient(to bottom, transparent, #ddd, transparent);
  }

  .internal-links {
    display: flex;
    gap: 1.5rem;
  }

  nav a {
    color: #666;
    font-size: 0.9rem;
    font-family: "Hiragino Mincho ProN", "MS PMincho", serif; /* 使用日系衬线体 */
    letter-spacing: 0.1em;
    text-decoration: none;
    position: relative;
    transition: color 0.3s ease;
  }

  nav a:hover, nav a.active {
    color: #000;
  }

  nav a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 1px;
    background: #000;
    transition: width 0.3s ease;
  }

  nav a:hover::after, nav a.active::after {
    width: 100%;
  }
</style>
