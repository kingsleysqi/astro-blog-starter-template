---
import HeaderLink from './HeaderLink.astro';
---

<header>
  <nav>
    <div class="left">
      <h2>
        <a href="/" aria-label="Home">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" width="56" height="56">
            <defs>
              <mask id="k-protector">
                <rect width="100" height="100" fill="white" />
                <path d="M 28 10 L 28 90" stroke="black" stroke-width="24" stroke-linecap="round" />
              </mask>

              <linearGradient id="liquid-metal" x1="0%" y1="0%" x2="0%" y2="100%">
                <stop offset="0%"   stop-color="#FFFFFF" stop-opacity="0.2" />
                <stop offset="20%"  stop-color="#F0F0F0" />
                <stop offset="50%"  stop-color="#FFFFFF" />
                <stop offset="80%"  stop-color="#E0E0E0" />
                <stop offset="100%" stop-color="#CCCCCC" stop-opacity="0.2" />
              </linearGradient>

              <linearGradient id="q-soft-grad" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%"   stop-color="#E0E0E0" />
                <stop offset="100%" stop-color="#999999" />
              </linearGradient>
            </defs>

            <g fill="none" stroke-linecap="round" stroke-linejoin="round">
              
              <path 
                d="M 52 38 A 21 21 0 1 1 44 76" 
                stroke="url(#q-soft-grad)" 
                stroke-width="12" 
                mask="url(#k-protector)"
              />

              <path d="M 32 46 L 56 20" stroke="url(#q-soft-grad)" stroke-width="13" mask="url(#k-protector)" />
              <path d="M 36 54 L 82 94" stroke="url(#q-soft-grad)" stroke-width="14" mask="url(#k-protector)" />

              <path 
                d="M 28 12 L 28 88" 
                stroke="url(#liquid-metal)" 
                stroke-width="17" 
              />
            </g>
          </svg>
        </a>
      </h2>

      <span class="nav-divider"></span>

      <div class="internal-links">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
      </div>
    </div>
  </nav>
</header>

<style>
  header {
    padding: 0 1.5rem;
    background: #ffffff;
    box-shadow: 0 1px 10px rgba(0,0,0,0.02);
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    height: 70px;
  }

  .left {
    display: flex;
    align-items: center;
    gap: 1.4rem;
  }

  .nav-divider {
    width: 1px;
    height: 28px;
    background: linear-gradient(to bottom, transparent, #efefef, transparent);
  }

  .internal-links {
    display: flex;
    gap: 0.8rem;
  }

  nav a {
    padding: 0.8em 0.8em;
    color: #555;
    font-size: 0.96rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  nav a:hover, nav a.active {
    color: #000;
    transform: translateY(-1px);
  }
</style>
