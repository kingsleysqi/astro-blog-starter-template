---
import HeaderLink from './HeaderLink.astro';
---

<header>
  <nav>
    <div class="left">
      <h2>
        <a href="/" aria-label="Home">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" width="56" height="56">
            <defs>
              <linearGradient id="vertical-bar-gradient" x1="0%" y1="0%" x2="0%" y2="100%">
                <stop offset="0%"   stop-color="#E0E0E0" stop-opacity="0.3" />
                <stop offset="50%"  stop-color="#FFFFFF" stop-opacity="1" />
                <stop offset="100%" stop-color="#A0A0A0" stop-opacity="0.3" />
              </linearGradient>

              <linearGradient id="kq_main_metal" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%"   stop-color="#FFFFFF" />
                <stop offset="40%"  stop-color="#DCDCDC" />
                <stop offset="100%" stop-color="#999999" />
              </linearGradient>
            </defs>

            <g fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path 
                d="M 28 12 L 28 88" 
                stroke="url(#vertical-bar-gradient)" 
                stroke-width="17" 
              />

              <path 
                d="M 32 48 L 58 20" 
                stroke="url(#kq_main_metal)" 
                stroke-width="13" 
              />

              <path 
                d="M 54 38 A 20 20 0 1 1 48 76" 
                stroke="url(#kq_main_metal)" 
                stroke-width="12" 
              />

              <path 
                d="M 38 48 L 82 92" 
                stroke="url(#kq_main_metal)" 
                stroke-width="13" 
              />
            </g>
          </svg>
        </a>
      </h2>

      <span class="nav-divider"></span>

      <div class="internal-links">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
      </div>
    </div>
  </nav>
</header>

<style>
  header {
    padding: 0 1.5rem;
    background: #ffffff;
    box-shadow: 0 1px 6px rgba(0,0,0,0.02);
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
  }

  .left {
    display: flex;
    align-items: center;
    gap: 1.25rem;
  }

  h2 { margin: 0; line-height: 1; }
  h2 a { display: block; }

  .nav-divider {
    width: 1px;
    height: 24px;
    background: linear-gradient(to bottom, transparent, #e0e0e0, transparent);
  }

  .internal-links {
    display: flex;
    gap: 0.6rem;
  }

  nav a {
    padding: 0.8em 0.75em;
    color: #444;
    font-size: 0.95rem;
    font-weight: 500;
    text-decoration: none;
    border-bottom: 2px solid transparent;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }

  nav a:hover, nav a.active {
    color: #000;
    border-bottom-color: #444;
  }
</style>
