---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style is:global>
			/* 1. 强制缩小首页标题字号 */
			h1 {
				font-size: 1.6rem !important; /* 显著缩小，原来是 2.2rem */
				font-weight: 300 !important;
				margin-bottom: 1.5rem !important;
				letter-spacing: 0.1em !important;
				color: #222 !important;
				text-transform: none;
			}

			/* 2. 强制首页 Hero 图片比例 */
			.image-wrapper {
				width: 100%;
				aspect-ratio: 16 / 9;
				overflow: hidden;
				border-radius: 12px;
				margin-bottom: 2.5rem;
				box-shadow: 0 4px 20px rgba(0,0,0,0.05);
			}
			.image-wrapper img {
				width: 100% !important;
				height: 100% !important;
				object-fit: cover !important;
			}

			main {
				width: calc(100% - 2em);
				max-width: 700px; /* 进一步缩小内容宽度，让排版更精致 */
				margin: 0 auto;
				padding: 3em 1em;
			}

			/* 3. Slogan 部分微调 */
			.tagline-en {
				font-family: Georgia, serif;
				font-style: italic;
				font-size: 1rem !important; /* 稍微调小 */
				color: #888;
				margin-bottom: 0.4rem;
			}
			.tagline-zh {
				font-size: 0.9rem !important; /* 稍微调小 */
				color: #444;
				letter-spacing: 0.2em;
				font-weight: 300;
			}

			section h2 {
				font-family: Georgia, serif;
				font-size: 1.2rem !important; /* 缩小二级标题 */
				font-weight: 300;
				color: #222;
				margin-top: 2rem;
			}

			@media (max-width: 600px) {
				h1 { font-size: 1.4rem !important; }
				.image-wrapper { aspect-ratio: 4 / 3; }
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1>{SITE_TITLE}.</h1>
			
			<div class="image-wrapper">
				<img src="/blog-placeholder-1.jpg" alt="Featured Image">
			</div>
			
			<div class="tagline">
				<p class="tagline-en">Exploring the boundaries of design & technology from Batangas.</p>
				<p class="tagline-zh">在边界处，探索设计与技术的交汇。</p>
			</div>
			
			<hr style="border: 0; border-top: 1px solid #f0f0f0; margin: 3rem 0;" />
			
			<section>
				<h2>Recent Echoes | 近期的回响</h2>
				<p style="font-size: 0.9rem; color: #999;">Explore more in the <a href="/blog" style="color: #666; text-decoration: underline;">Library</a>.</p>
			</section>
		</main>
		<Footer />
	</body>
</html>
