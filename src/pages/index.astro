---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
   <h1>Kingsley Qi.</h1>
   <img src="/blog-placeholder-5.jpg" alt="Kingsley Qi Logo" width="500">
    
    .logo-style {
    /* 金属拉丝感可以通过微小的渐变实现 */
    background: linear-gradient(135deg, #e0e0e0 0%, #a8a8a8 50%, #4a4a4a 100%);
    
    /* 模拟图片中的立体投影 */
    filter: drop-shadow(0px 10px 15px rgba(0, 0, 0, 0.8));
    
    /* 文字的银色质感 */
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

    
   <p>Exploring the boundaries and design from Santo Tomas, Batangas.</p>
			<p>

		</main>
		<Footer />
	</body>
</html>
