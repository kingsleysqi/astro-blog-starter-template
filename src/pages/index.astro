---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 800px;
				margin: 0 auto;
				padding: 4em 1em;
			}
			.hero-image {
				width: 100%;
				border-radius: 12px;
				margin-bottom: 3rem;
				/* 减弱阴影，增加高级感 */
				box-shadow: 0 4px 20px rgba(0,0,0,0.05);
			}
			
			/* 标题：更有呼吸感，不那么沉重 */
			h1 {
				font-size: 2.2rem;
				font-weight: 300;
				margin-bottom: 2rem;
				letter-spacing: 0.1em;
				color: #222;
			}

			/* Slogan 容器 */
			.tagline {
				margin: 3rem 0;
			}

			/* 英文：斜体、优雅 */
			.tagline-en {
				font-family: Georgia, serif;
				font-style: italic;
				font-size: 1.1rem;
				color: #888;
				margin-bottom: 0.4rem;
			}

			/* 中文：细体、拉开字间距 */
			.tagline-zh {
				font-size: 1rem;
				color: #444;
				letter-spacing: 0.2em;
				font-weight: 300;
			}

			hr {
				border: 0;
				border-top: 1px solid #f0f0f0;
				margin: 4rem 0;
			}

			section h2 {
				font-family: Georgia, serif;
				font-size: 1.5rem;
				font-weight: 300;
				color: #222;
				letter-spacing: 0.05em;
			}

			.blog-link {
				color: #999;
				text-decoration: none;
				border-bottom: 1px solid #eee;
				transition: all 0.3s ease;
				font-size: 0.95rem;
			}

			.blog-link:hover {
				color: #333;
				border-bottom-color: #333;
			}

			@media (max-width: 600px) {
				h1 { font-size: 1.8rem; }
				.tagline-zh { font-size: 0.9rem; letter-spacing: 0.1em; }
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1>{SITE_TITLE}.</h1>
			
			<img class="hero-image" src="/IMG20260128171636.jpg" alt="Featured Image">
			
			<div class="tagline">
				<p class="tagline-en">Exploring the boundaries of design & technology from Batangas.</p>
				<p class="tagline-zh">在边界处，探索设计与技术的交汇。</p>
			</div>
			
			<hr />
			
			<section>
				<h2>Recent Echoes | 近期的回响</h2>
				<p>Explore more in the <a class="blog-link" href="/blog">Library</a>.</p>
			</section>
		</main>
		<Footer />
	</body>
</html>
