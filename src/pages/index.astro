---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style is:global>
			main {
				width: calc(100% - 2em);
				max-width: 800px;
				margin: 0 auto;
				padding: 4em 1em;
			}

			/* 1. 定义一个强制比例的容器 */
			.image-wrapper {
				width: 100%;
				aspect-ratio: 16 / 9; /* 这里控制比例 */
				overflow: hidden;     /* 溢出裁剪 */
				border-radius: 12px;
				margin-bottom: 3rem;
				box-shadow: 0 4px 20px rgba(0,0,0,0.05);
				background-color: #f5f5f5; /* 加个底色，防止图没出来时是白的 */
			}

			/* 2. 强制内部图片填满容器 */
			.image-wrapper img {
				width: 100% !important;
				height: 100% !important;
				object-fit: cover !important; /* 核心：不拉伸，填满 */
				display: block;
			}

			h1 {
				font-size: 2.2rem;
				font-weight: 300;
				margin-bottom: 2rem;
				letter-spacing: 0.1em;
				color: #222;
			}

			.tagline { margin: 3rem 0; }
			.tagline-en {
				font-family: Georgia, serif;
				font-style: italic;
				font-size: 1.1rem;
				color: #888;
				margin-bottom: 0.4rem;
			}
			.tagline-zh {
				font-size: 1rem;
				color: #444;
				letter-spacing: 0.2em;
				font-weight: 300;
			}

			@media (max-width: 600px) {
				.image-wrapper { aspect-ratio: 4 / 3; } /* 手机端比例稍微方一点 */
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1>{SITE_TITLE}.</h1>
			
			<div class="image-wrapper">
				<img src="/blog-placeholder-1.jpg" alt="Featured Image">
			</div>
			
			<div class="tagline">
				<p class="tagline-en">Exploring the boundaries of design & technology from Batangas.</p>
				<p class="tagline-zh">在边界处，探索设计与技术的交汇。</p>
			</div>
			
			<hr />
			
			<section>
				<h2>Recent Echoes | 近期的回响</h2>
				<p>Explore more in the <a class="blog-link" href="/blog">Library</a>.</p>
			</section>
		</main>
		<Footer />
	</body>
</html>
