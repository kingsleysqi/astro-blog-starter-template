---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style is:global>
			main {
				width: 960px;
				max-width: calc(100% - 2em);
				margin: 0 auto;
				padding: 3em 0;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			/* 电脑端核心布局：两列并排 */
			ul li {
				width: calc(50% - 1rem) !important; /* 强制两列 */
				margin-bottom: 2rem;
			}
			/* 第一篇文章强制占满一行，且左右布局对齐 */
			ul li:first-child {
				width: 100% !important;
				margin-bottom: 3rem;
				text-align: left;
			}

			/* 比例容器：这是电脑端整齐的关键 */
			.pc-image-wrapper {
				width: 100%;
				aspect-ratio: 16 / 9; /* 锁定 16:9，你可以根据喜好改为 3/2 */
				overflow: hidden;
				border-radius: 12px;
				margin-bottom: 1rem;
				background: #f0f0f0;
				box-shadow: 0 2px 8px rgba(0,0,0,0.05);
			}

			/* 第一张大图的比例可以稍微扁一点，更有设计感 */
			ul li:first-child .pc-image-wrapper {
				aspect-ratio: 21 / 9; 
			}

			.pc-image-wrapper img {
				width: 100% !important;
				height: 100% !important;
				object-fit: cover !important; /* 强制填充，不拉伸 */
				display: block;
				transition: transform 0.4s ease;
			}

			ul li a {
				display: block;
				text-decoration: none;
			}

			/* 标题样式：精致、克制 */
			.blog-post-title {
				margin: 0.5rem 0 0.3rem 0;
				color: #222;
				font-size: 1.15rem; /* 电脑端稍大一点点 */
				font-weight: 400;
				line-height: 1.4;
				letter-spacing: 0.02em;
			}

			.date {
				margin: 0;
				color: #999;
				font-size: 0.85rem;
			}

			/* 悬停交互 */
			ul li a:hover img {
				transform: scale(1.03);
			}
			ul li a:hover .blog-post-title {
				color: #000;
			}

			/* 移动端适配 */
			@media (max-width: 720px) {
				ul { gap: 2rem; }
				ul li { width: 100% !important; }
				.pc-image-wrapper, ul li:first-child .pc-image-wrapper {
					aspect-ratio: 16 / 9 !important;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									<div class="pc-image-wrapper">
										<img src={post.data.heroImage} alt="" />
									</div>
									<h4 class="blog-post-title">{post.data.title}</h4>
									<div class="date">
										<FormattedDate date={post.data.pubDate} />
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
