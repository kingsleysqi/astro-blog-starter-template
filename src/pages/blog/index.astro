
---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
				max-width: calc(100% - 2em);
				margin: 0 auto;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem); /* 电脑端两列并行 */
			}
			
			/* 核心：强制图片比例容器 */
			.image-wrapper {
				width: 100%;
				aspect-ratio: 16 / 9; /* 统一比例 */
				overflow: hidden;
				border-radius: 12px;
				margin-bottom: 0.5rem;
				background-color: #f0f0f0;
			}

			.image-wrapper img {
				width: 100% !important;
				height: 100% !important;
				object-fit: cover !important; /* 强制填充不拉伸 */
				transition: 0.2s ease;
			}

			ul li a {
				display: block;
				text-decoration: none;
			}
			.title {
				margin: 0;
				color: #222;
				line-height: 1.2;
				font-size: 1.2rem;
				font-weight: 400;
			}
			.date {
				margin: 0;
				color: #888;
				font-size: 0.9rem;
			}

			/* 第一篇文章特殊处理（可选：如果你想让第一篇特别大） */
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
			}
			ul li:first-child .title {
				font-size: 1.8rem;
			}
			ul li:first-child .image-wrapper {
				aspect-ratio: 21 / 9; /* 第一张大图可以用宽银幕比例，更有视觉冲击力 */
			}

			ul li a:hover img {
				transform: scale(1.02); /* 悬停时轻微放大，增加交互感 */
			}
			
			ul li a:hover .title {
				color: #333;
			}

			@media (max-width: 720px) {
				ul {
					gap: 1.5rem;
				}
				ul li {
					width: 100%;
					text-align: left;
				}
				.image-wrapper {
					aspect-ratio: 4 / 3; /* 手机端用 4:3 比例更好看 */
				}
				ul li:first-child .image-wrapper {
					aspect-ratio: 4 / 3;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									<div class="image-wrapper">
										<img src={post.data.heroImage} alt="" />
									</div>
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
