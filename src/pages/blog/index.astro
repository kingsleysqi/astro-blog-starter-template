---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
				max-width: calc(100% - 2em);
				margin: 0 auto;
				padding: 3em 0;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			
			.image-container {
				width: 100%;
				aspect-ratio: 16 / 9; 
				overflow: hidden;
				border-radius: 12px;
				margin-bottom: 1rem;
				background: #f5f5f5;
			}

			.image-container img {
				width: 100% !important;
				height: 100% !important;
				object-fit: cover !important;
			}

			ul li:first-child {
				width: 100%;
				margin-bottom: 2rem;
			}
			ul li:first-child .image-container {
				aspect-ratio: 21 / 9; 
			}

			ul li a {
				display: block;
				text-decoration: none;
			}

			/* 重点修改：使用专用类名，不影响首页 */
			.blog-post-title {
				margin: 0.5rem 0 0.2rem 0;
				color: #222;
				line-height: 1.4;
				font-size: 1.1rem; /* 调小字体，匹配你首页的精致感 */
				font-weight: 400;
				letter-spacing: 0.05em;
			}

			.date {
				margin: 0;
				color: #888;
				font-size: 0.85rem;
			}

			@media (max-width: 720px) {
				ul { gap: 2rem; }
				ul li { width: 100% !important; }
				.image-container, ul li:first-child .image-container {
					aspect-ratio: 16 / 9;
				}
				.blog-post-title {
					font-size: 1rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									<div class="image-container">
										<img src={post.data.heroImage} alt={post.data.title} />
									</div>
									<h4 class="blog-post-title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
