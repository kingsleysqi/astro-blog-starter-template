---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style is:global>
			/* 强力全局样式：锁定所有博客列表图 */
			main {
				width: 960px;
				max-width: calc(100% - 2em);
				margin: 0 auto;
				padding: 3em 0;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			/* 强制列表项在电脑端并排两列 */
			ul li {
				width: calc(50% - 1rem) !important;
			}
			/* 第一篇强制占满一行 */
			ul li:first-child {
				width: 100% !important;
				margin-bottom: 1rem;
			}

			/* 【核心】比例盒子：彻底解决图片大小不一 */
			.list-img-wrapper {
				width: 100% !important;
				aspect-ratio: 16 / 9 !important; /* 你可以根据喜好改成 3/2 */
				overflow: hidden !important;
				border-radius: 12px;
				margin-bottom: 0.8rem;
				background: #f5f5f5;
			}
			/* 针对第一篇可以更宽一点（可选） */
			ul li:first-child .list-img-wrapper {
				aspect-ratio: 21 / 9 !important;
			}

			.list-img-wrapper img {
				width: 100% !important;
				height: 100% !important;
				object-fit: cover !important; /* 核心：不拉伸，自动填充 */
				display: block;
				transition: transform 0.3s ease;
			}

			ul li a {
				display: block;
				text-decoration: none;
			}
			.blog-post-title {
				margin: 0;
				color: #222;
				font-size: 1.1rem;
				font-weight: 400;
				line-height: 1.4;
			}
			.date {
				margin: 0;
				color: #888;
				font-size: 0.85rem;
			}

			/* 悬停效果 */
			ul li a:hover img {
				transform: scale(1.03);
			}

			@media (max-width: 720px) {
				ul { gap: 1.5rem; }
				ul li { width: 100% !important; }
				.list-img-wrapper, ul li:first-child .list-img-wrapper {
					aspect-ratio: 16 / 9 !important;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									<div class="list-img-wrapper">
										<img src={post.data.heroImage} alt="" />
									</div>
									<h4 class="blog-post-title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
